<% @items.in_groups_of(4, false) do |group| %>
  <div class="row">
    <% group.each do |item| %>
      <div class="col-md-3 item-container">
        <%= item.image_url %>
        <%= item.name %>
        <%= item.short_description %>
        <%= button_to item_path(item), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
<% end %>
