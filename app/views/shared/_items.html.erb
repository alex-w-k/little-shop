<% @items.in_groups_of(4, false) do |group| %>
  <div class="row">
    <% group.each do |item| %>
      <div class="col-md-3 item-container">
        <%# <%= item.image_url %1> %>
        <strong> <%= item.title %></strong><br>
        <%= item.description %>
        <br>
        $<%= item.price  %><br>
        <%= link_to  "#{item.title}", category_item_path(item.category, item), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
<% end %>
