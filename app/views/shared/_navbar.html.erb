<script>
  $( document ).ready(function() {
    $(".dropdown-button").dropdown();
    $(".dropdown-button-2").dropdown();
    $(".button-collapse").sideNav();
  });
</script>
<!-- Dropdown Structure -->
<ul id="dropdown-categories" class="dropdown-content">
  <% @categories.each do |category| %>
    <li><%= link_to category.title, category_path(category),  class: "dropdown-item"%></li>
    <li class="divider"></li>
  <% end %>
</ul>

<nav class="nav-extended pink accent-2">
  <div class="nav-wrapper">
    <a class="brand-logo" href="/">Paves Store</a>
    <a href="#" data-activates="mobile-menu" class="button-collapse"><i class="material-icons">menu</i></a>
    <ul class="right hide-on-med-and-down">
      <li><a class="dropdown-button" href="/categories" data-beloworigin="true" data-activates="dropdown-categories">Categories<i class="material-icons right">arrow_drop_down</i></a></li>
      <% if session[:user_id] %>
        <% user = current_user %>
        <li>Logged in as <%= link_to "#{user.username}", dashboard_path %></li>
        <li class="active">
          <%= link_to "Logout", login_path, method: "delete" %>
        </li>
      <% else %>
        <li class="active">
          <%= link_to "Login", login_path %>
        </li>
        <li class="active">
          <%= link_to "Sign Up!", new_user_path %>
        </li>
      <% end %>
      <% if current_page?(cart_path) %>
        <li class="active">
      <% else %>
        <li>
      <% end %>
        <%= link_to "Cart #{@cart.total_count}", cart_path %>
      </li>
    </ul>
    <ul class="side-nav" id="mobile-menu">
      <li><a class="dropdown-button-2" href="/categories" data-beloworigin="true" data-activates="dropdown-categories">Categories<i class="material-icons right">arrow_drop_down</i></a></li>
      <% if session[:user_id] %>
        <% user = current_user %>
        <li>Logged in as <%= link_to "#{user.username}", dashboard_path %></li>
        <li class="active">
          <%= link_to "Logout", login_path, method: "delete"  %>
        </li>
      <% else %>
        <li class="active">
          <%= link_to "Login", login_path %>
        </li>
        <li class="active">
          <%= link_to "Sign Up!", new_user_path %>
        </li>
      <% end %>
      <% if current_page?(cart_path) %>
        <li class="active">
      <% else %>
        <li>
      <% end %>
        <%= link_to "Cart #{@cart.total_count}", cart_path %>
      </li>
    </ul>
  </div>
</nav>
