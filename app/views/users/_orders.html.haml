%table.table-striped
  %tr
    %td.table-header Order ID
    %td.table-header Order Status
    %td.table-header Order Date
  - @user.orders.reverse[0..4].each do |order|
    %tr
      %td.table-detail
        = link_to "order number: #{order.id}", order_path(order)
      %td.table-detail
        = order.status
      %td.table-detail
        = order.created_at
